<div id="<%= dom_id booking %>" class= "">
  <table class="table table-striped table-bordered table-sm">
    <tbody>
    <tr>
      <td><strong>Booking ID</strong></td>
      <td><%= booking.id %></td>
    </tr>

    <tr>
      <td><strong>User: </strong></td>
      <td><%= booking.user.first_name %></td>
    </tr>

    <tr>
      <td><strong>Workout session:</strong></td>
      <td><%= booking.workout_session.name %></td>
    </tr>
    
    <tr>
      <td><strong>Booking Status:</strong>
      <td><%= booking.booking_status %></td>
    </tr>

    <tr>
      <td><strong>Buddy:</strong> </td>
      <td><%= booking.workout_session.buddy.name %> </td>
    </tr>
      
    <tr>
      <td><%= link_to "Session details", booking.workout_session %></td>
      <td><%= button_to "Cancel this booking", booking, method: :delete, data: {turbo: false} %></td>
    </tr>
  </table>
</div>
